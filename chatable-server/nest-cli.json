{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "./.env.production.local", "outDir": "./dist", "watchAssets": true },
      { "include": "./.env.production", "outDir": "./dist", "watchAssets": true }
    ]
  }
}
